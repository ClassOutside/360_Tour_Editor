{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "allowJs": true, // ✅ Allows importing .js and .jsx files
    "checkJs": false, // ✅ Prevents TypeScript from type-checking JS/JSX files

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "Components/*": ["./src/Components/*"]
    }
  },
  "include": ["src", "electron", "src/**/*.js", "src/**/*.jsx"], // ✅ Ensures JSX files are included
  "references": [{ "path": "./tsconfig.node.json" }]
}
